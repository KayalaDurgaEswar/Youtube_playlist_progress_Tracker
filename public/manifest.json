{
	"manifest_version": 3,
	"name": "YouTube Playlist Progress Tracker",
	"version": "1.0.0",
	"description": "Track your progress in YouTube playlists.",
	"action": {
		"default_popup": "popup.html",
		"default_title": "YouTube Progress"
	},
	"permissions": [
		"storage",
		"tabs",
		"scripting"
	],
	"host_permissions": [
		"https://www.youtube.com/*"
	],
	"icons": {
		"16": "icons/image.png",
		"32": "icons/image.png",
		"48": "icons/image.png",
		"128": "icons/image.png"
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["content.js"]
		}
	]
}
